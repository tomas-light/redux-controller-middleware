{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es2022", "esnext.decorators", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "include": [
    "src"
  ]
}
